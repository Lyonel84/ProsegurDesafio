@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Materia Prima</h2>

<div class="card">
    <div class="card-header" style="display:none;">
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <p>Nombre Materia Prima:</p>
                </div>
                <div class="col-sm-10">
                    <input class="form-control" placeholder="Nombre Materia Prima" id="NombreMaterial" name="NombreMaterial" autocomplete="off" value="@ViewBag.NombreBuscar" />
                </div>

            </div>
            <div class="row mt-2">

                <div class="col d-grid gap-2 col-4 float-end">
                    <input type="submit" class="btn btn-primary btnbuscar" value="Buscar" />
                </div>
            </div>

        </div>
    </div>
</div>
<div class="card mt-4 panel-body">
    <div class="table-responsive">
        <div class="d-grid gap-2 col-3 float-end">
            <input type="submit" class="btn btn-primary btnnuevo" value="Nuevo" />
        </div>
        <table class="table Tableper" id="grvResult" style="width: 100%;">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre Material</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
        </table>

    </div>
    <div class="modal fade" id="modalRegister" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Materia Prima</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="txtName" class="col-form-label">Nombre:</label>
                            <input type="text" class="form-control" id="txtName" autocomplete="off">
                        </div>
                        <div class="mb-3">
                            <label for="txtCantidad" class="col-form-label">Cantidad:</label>
                            <input type="text" class="form-control" style="width:100px" id="txtCantidad" onkeypress="return onlyNum(event);">
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnRegistrar" class="btn btn-primary">Registrar</button>
                    <button type="button" class="btn btn-default btncerrarregister" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/materiaprima.js"></script>